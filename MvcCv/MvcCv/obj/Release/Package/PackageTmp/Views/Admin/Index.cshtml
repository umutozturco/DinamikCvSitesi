@using MvcCv.Models.Entity
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<br />
<h2>Admin İşlemleri</h2>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Kullanıcı Adı</th>
        <th>Düzenle</th>
        <th>Kaldır</th>
        


    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>@item.Id</td>
            <td>@item.KullaniciAdi</td>
       
            <td><a href="/Admin/AdminDuzenle/@item.Id" class="btn btn-success">Düzenle</a></td>
            <td><a href="/Admin/AdminSil/@item.Id" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Admin/AdminEkle" class="btn btn-primary">Yeni Kullanıcı Ekle</a>



